@model IEnumerable<Coupon>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Coupon List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Coupon" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Coupon
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Coupon StartDate
                </th>
                <th>
                    Coupon ExpiryDate
                </th>
                <th>   Coupon Code</th>
                <th>   Offer Type</th>
                <th>   Offer Value</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.StartDate
                    </td>
                    <td width="30%">
                        @obj.ExpiryDate
                    </td>
                    <td width="30%">
                        @obj.CouponCode
                    </td>
                    <td width="90%">
                        @obj.OfferType
                    </td>
                    <td width="40%">
                        @obj.OfferValue
                    </td>


                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Coupon" asp-action="Edit" asp-route-id="@obj.Id"
                               class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Coupon" asp-action="Delete" asp-route-id="@obj.Id"
                               class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>